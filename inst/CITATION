citHeader("To cite EDIutils in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{EDIutils}: An API Client for the Environmental Data Initiative Repository in R",
         author = c(person("Colin", "Smith")),
         year = year,
         note = note,
         doi = "TBD",
	 url = "TBD")

 textVersion = paste0("Colin A Smith, (", year, ").",
  " EDIutils: An API Client for the Environmental Data Initiative Repository in R. ",
  note, ". DOI: TBD. TBD")